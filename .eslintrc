{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["faicon"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "rules": {
    "quotes": ["error", "single"],
    "react/no-unescaped-entities": 0,
    "semi": [2, "never"],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "none",
        "varsIgnorePattern": "classes",
        "ignoreRestSiblings": true
      }
    ],
    "no-console": 0,
    "react/display-name": 0,
    "react/no-find-dom-node": 0,
    "react/prop-types": [1, { "ignore": ["children"], "skipUndeclared": true }],
    "max-len": [2, 160, 4, { "ignoreUrls": true, "ignoreStrings": true }],
    "faicon/no-unused-styles": 2
  }
}
